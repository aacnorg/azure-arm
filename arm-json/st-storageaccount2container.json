{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of the Storage Account. (st)"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "Sku of the Storage Account."
      }
    },
    "container1Name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of the Storage Account container 1"
      }
    },
    "container1Access": {
      "type": "string",
      "allowedValues": [ "Container", "None" ],
      "defaultValue": "Container",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of the Storage Account container 1"
      }
    },
    "container2Name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of the Storage Account container 2"
      }
    },
    "container2Access": {
      "type": "string",
      "allowedValues": [ "Container", "None" ],
      "defaultValue": "Container",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of the Storage Account container 1"
      }
    },
    "kind": {
      "type": "string",
      "defaultValue": "StorageV2",
      "allowedValues": [
        "BlobStorage",
        "BlockBlobStorage",
        "FileStorage",
        "Storage",
        "StorageV2"
        ],
      "metadata": {
        "description": "Kind of the Storage Account."
      }
    }
  },
  "variables": {
  },
    "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('name')]",
      "apiVersion": "2018-02-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "[parameters('name')]"
      },
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "[parameters('kind')]",
      "properties": {},
      "resources": [
          {
              "type": "blobServices/containers",
              "apiVersion": "2018-03-01-preview",
              "name": "[concat('default/', parameters('container1Name'))]",
              "dependsOn": [
                  "[parameters('name')]"
              ],
              "properties": {
                  "publicAccess": "[parameters('container1Access')]"
              }
          },
          {
              "type": "blobServices/containers",
              "apiVersion": "2018-03-01-preview",
              "name": "[concat('default/', parameters('container2Name'))]",
              "dependsOn": [
                  "[parameters('name')]"
              ],
              "properties": {
                  "publicAccess": "[parameters('container2Access')]"
              }
          }
      ]
    }
  ],
  "outputs": {
  }
}