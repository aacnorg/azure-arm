{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "defaultValue": "teams"
    },
    "displayName": {
      "type": "string"
    }
  },
  "variables": {
    "locationShortName": "[toLower(replace(resourceGroup().location, ' ', ''))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2021-06-01",
      "name": "[parameters('name')]",
      "location": "[variables('locationShortName')]",
      "kind": "V1",
      "properties": {
        "displayName": "[parameters('displayName')]",
        "customParameterValues": {},
        "api": {
            "name": "[parameters('name')]",
            "displayName": "Office 365",
            "description": "Microsoft Teams enables you to get all your content, tools and conversations in the Team workspace with Office 365.",
            "iconUri": "[concat('https://connectoricons-prod.azureedge.net/releases/v1.0.1505/1.0.1505.2520/', parameters('name'), '/icon.png')]",
            "brandColor": "#4B53BC",
            "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/office365')]",
            "type": "Microsoft.Web/locations/managedApis"
        },
        "parameterValues": {
        }
      },
      "dependsOn": [        
      ]
    }
  ]
}