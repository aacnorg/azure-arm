{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "minLength": 1
    },
    "planName": {
      "type": "string",
      "minLength": 1
    },
    "planResourceGroupName": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "minLength": 1
    },
    "stName": {
      "type": "string"
    },
    "appiKey": {
      "type": "string"
    },
    "appiConnection": {
      "type": "string"
    },
    "use32BitWorkerProcess": {
      "type": "bool",
      "defaultValue": true
    },
    "rgEnvironment": {
      "type": "string",
      "defaultValue": "Development",
      "allowedValues": ["Development", "QA", "Staging", "Production"]
    },
    "funcRuntime": {
      "type": "string",
      "defaultValue": "dotnet-isolated",
      "allowedValues": ["dotnet", "python", "dotnet-isolated"]
    },
    "funcVersion": {
      "type": "int",
      "defaultValue": 4,
      "allowedValues": [1, 2, 3, 4]
    },
    "dotNetVersion": {
      "type": "int",
      "defaultValue": 6,
      "allowedValues": [4, 6, 7]
    }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2018-11-01",
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "location": "[parameters('location')]",
      "tags": {},
      "properties": {
        "name": "[parameters('name')]",
        "netFrameworkVersion": "[parameters('dotNetVersion')]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "[concat('~', parameters('funcVersion'))]"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "[parameters('funcRuntime')]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[parameters('appiKey')]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('appiConnection')]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('stName'),';AccountKey=',listKeys(resourceId(subscription().subscriptionId,resourceGroup().name,'Microsoft.Storage/storageAccounts', parameters('stName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('stName'),';AccountKey=',listKeys(resourceId(subscription().subscriptionId,resourceGroup().name,'Microsoft.Storage/storageAccounts', parameters('stName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[concat(toLower(parameters('name')), '9711')]"
            },
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('rgEnvironment')]"
            },
            {
              "name": "AZURE_FUNCTIONS_ENVIRONMENT",
              "value": "[parameters('rgEnvironment')]"
            }
          ],
          "use32BitWorkerProcess": "[parameters('use32BitWorkerProcess')]"
        },
        "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId,'/resourcegroups/', parameters('planResourceGroupName'), '/providers/Microsoft.Web/serverfarms/', parameters('planName'))]",        
        "clientAffinityEnabled": true
      }
    }    
  ]
}