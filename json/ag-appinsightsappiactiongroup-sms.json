{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Unique name (within the Resource Group) for the Action group. ag-PRODUCT-PURPOSE-ENVIRONMENT-001"
      }
    },
    "smsReceiver": {
      "type": "object",
      "defaultValue": {
        "name": "smsRecepient1",
        "countryCode": "1",
        "phoneNumber": "5555551212"
      },
      "metadata": {
        "description": "Receiver for this action group."
      }
    }
  },
  "variables": {
    "shortname": "[toLower(replace(resourceGroup().location, ' ', ''))]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/actionGroups",
      "apiVersion": "2021-09-01",
      "name": "[parameters('name')]",
      "location": "Global",
      "properties": {
        "groupShortName": "[variables('shortname')]",
        "enabled": true,
        "smsReceivers": [ "[parameters('smsReceiver')]" ],
        "emailReceivers": [ ],
        "webhookReceivers": [ ],
        "SecurewebhookReceivers": [ ],
        "eventHubReceivers": [ ]
      }
    }
  ],
  "outputs": {
    "actionGroupId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Insights/actionGroups',variables('shortname'))]"
    }
  }
}